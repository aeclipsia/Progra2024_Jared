package ejercicio1;

public class ArrayReales implements Estadisticas{

	private double numeros[];
	private int tam; //tamaño máximo
	private int num; //número de datos actualmente
	
	public ArrayReales(int tam) {
		numeros=new double[tam];
		this.tam = tam;
	}
	
	public boolean add(double n) {
		if (num>=tam) {
			return false;
		}
		numeros[num]=n;
		num++;
		return true;
	}
	
	@Override
	public double minimo() {
		double min=0;
		for (int i = 0; i < tam; i++) {
			if (i==0) {
				min=numeros[i];
			}
			else if (min>numeros[i]) {
				min=numeros[i];
			}
		}
		return min;
	}

	@Override
	public double maximo() {
		double max=0;
		for (int i = 0; i < tam; i++) {
			if (i==0) {
				max=numeros[i];
			}
			else if (max<numeros[i]) {
				max=numeros[i];
			}
		}
		return max;
	}

	@Override
	public double sumatorio() {
		double sum=0;
		for (int i = 0; i < tam; i++) {
			sum+=numeros[i];
		}
		return sum;
	}
	
	
	
}
